{% extends 'base.html.twig' %}

{% block title %}Recipes{% endblock %}

{% block body %}
    <div class="container col-10">

        <h1>Recipe index</h1>

        <a href="{{ path('app_recipe_new') }}" class="btn btn-success">Create new</a>

        <div class="count mt-4">
            <small>total: {{ pagination.getTotalItemCount }}</small>
        </div>

        <table class="table table-hover">
            <thead>
                <tr class="table-active">
                    <th scope="col">Name</th>
                    <th scope="col">Time</th>
                    <th scope="col">People</th>
                    <th scope="col">Difficulty</th>
                    <th scope="col">Price</th>
                    <th scope="col">actions</th>
                </tr>
            </thead>
            <tbody>
            {% for recipe in pagination %}
                {% if loop.index is even %}
                    <tr class="table-active">
                        <td>{{ recipe.name }}</td>
                        <td>{{ recipe.time // 60 }}h {{ recipe.time % 60 }}m</td>
                        <td>{{ recipe.people }}</td>
                        <td>{{ recipe.difficulty }}</td>
                        <td>{{ recipe.price }}</td>
                        <td>
                            <a href="{{ path('app_recipe_show', {'id': recipe.id}) }}">show</a>
                            <a href="{{ path('app_recipe_edit', {'id': recipe.id}) }}">edit</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td>{{ recipe.name }}</td>
                        <td>{{ recipe.time // 60 }}h {{ recipe.time % 60 }}m</td>
                        <td>{{ recipe.people }}</td>
                        <td>{{ recipe.difficulty }}</td>
                        <td>{{ recipe.price }}</td>
                        <td>
                            <a href="{{ path('app_recipe_show', {'id': recipe.id}) }}">show</a>
                            <a href="{{ path('app_recipe_edit', {'id': recipe.id}) }}">edit</a>
                        </td>
                    </tr>
                {% endif %}    
            {% endfor %}
            </tbody>
        </table>
        <div class="navigation d-flex justify-content-center">
            {{ knp_pagination_render(pagination) }}
        </div>    
    </div>
{% endblock %}
